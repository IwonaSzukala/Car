@page
@model LoginPinModel

@{
    ViewData["Title"] = "Logowanie dla pracowników";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm mt-3">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">@ViewData["Title"]</h2>
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="E-mail" />
                        <label asp-for="Input.Email">E-mail</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Pin" class="form-control" autocomplete="current-password" aria-required="true" placeholder="PIN" />
                        <label asp-for="Input.Pin">PIN</label>
                        <span asp-validation-for="Input.Pin" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" id="rememberMeCheck" />
                        <label class="form-check-label" for="rememberMeCheck">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>

                    <div class="mb-3">
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Zaloguj się</button>
                    </div>

                   
                </form>
            </div>
        </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
