            <div class="form-group mb-3">
                <label class="control-label" for="LastName">Last Name</label>
                <input class="form-control" type="text" id="LastName" name="User.LastName" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" for="Email">E-mail</label>
                <input class="form-control" type="email" id="Email" name="User.Email" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" for="Password">Password</label>
                <input class="form-control" type="password" id="Password" name="User.Password" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" for="PhoneNumber">Phone Number</label>
                <input class="form-control" type="tel" id="PhoneNumber" name="UserContactDetails.PhoneNumber" />
