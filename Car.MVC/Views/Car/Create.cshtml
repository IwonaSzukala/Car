@using Car.Application.Car;
@using Car.Application.Car.Commands.CreateCar
@using System.Security.Claims;
@model CreateCarCommand;

<h1>Create Car</h1>

<hr />

<div class="row">
    <div class="col-md4">
        <form action="/Car/Create" method="post">

                <input class="form-control" type="hidden" id="UserId" asp-for="UserId" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)"/>



            <div class="form-group mb-3">
                <label class="control-label" asp-for="CarBrand">Car Brand</label>
                <input class="form-control" type="text" id="CarBrand" asp-for="CarBrand" />
                <span asp-validation-for="CarBrand" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label" asp-for="CarModel">Car Model</label>
                <input class="form-control" type="text" id="CarModel" asp-for="CarModel" />
                <span asp-validation-for="CarModel" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label" asp-for="ProductionYear">Production Year</label>
                <input class="form-control" type="text" id="ProductionYear" asp-for="ProductionYear" />
                <span asp-validation-for="ProductionYear" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label" asp-for="RegistrationNumber">Registration Number</label>
                <input class="form-control" type="text" id="RegistrationNumber" asp-for="RegistrationNumber" />
                <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label" asp-for="VIN">VIN</label>
                <input class="form-control" type="text" id="VIN" asp-for="VIN" />
                <span asp-validation-for="VIN" class="text-danger"></span>
            </div>

            @*<div class="form-group mb-3">
                <label class="control-label" for="FirstName">First Name</label>
