@model Car.Application.Car.CarDto

@{
    ViewData["Title"] = "Samochody użytkownika";
}

<h1 class="text-center my-4">Samochody użytkownika @Model.User.FirstName @Model.User.LastName</h1>

@if (Model == null)
{
    <p class="text-center text-muted">Użytkownik nie posiada żadnych samochodów.</p>
}
else
{
    <div class="row justify-content-center">
        <div class="card m-3" style="width: 20rem;">
            <div class="card-body">
                <h4 class="card-title text-center">Marka: @Model.CarBrand</h4>
                <h5 class="card-subtitle mb-2 text-muted text-center">Model: @Model.CarModel</h5>
                
                <p class="card-text"><b>Rok produkcji:</b> @Model.ProductionYear</p>
                <p class="card-text"><b>Numer rejestracyjny:</b> @Model.RegistrationNumber</p>
                <p class="card-text"><b>VIN:</b> @Model.VIN</p>

                <div class="d-flex justify-content-between">
                    <a asp-controller="Car" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">Edytuj</a>
                    <a asp-action="Index" class="btn btn-secondary btn-sm">Powrót do listy</a>
                </div>
            </div>
        </div>
    </div>
}
