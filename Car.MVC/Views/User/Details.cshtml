@model IEnumerable<Car.Application.Car.CarDto>

@{
    ViewData["Title"] = "Samochody użytkownika";
}


@if (Model == null)
{
    <p class="text-center text-muted">Użytkownik nie posiada żadnych samochodów.</p>
}
else
{
    
    <div class="row justify-content-center">
        @foreach(var car in Model)
        {
            <div class="card m-3" style="width: 20rem;">
            <div class="card-body">
                <h4 class="card-title text-center">Marka: @car.CarBrand</h4>
                <h5 class="card-subtitle mb-2 text-muted text-center">Model: @car.CarModel</h5>
                <p class="card-text"><b>Rok produkcji:</b> @car.ProductionYear</p>
                <p class="card-text"><b>Numer rejestracyjny:</b> @car.RegistrationNumber</p>
                <p class="card-text"><b>VIN:</b> @car.VIN</p>
                <div class="d-flex justify-content-between">
                    <a asp-controller="Car" asp-action="Edit" asp-route-id="@car.Id" class="btn btn-primary btn-sm">Edytuj</a>
                    <a asp-action="Index" class="btn btn-secondary btn-sm">Powrót do listy</a>
                </div>
            </div>
        </div>
        }
    </div>
}
